# PostgreSQL (開発時は docker-compose の db サービスを使用)
DATABASE_URL=postgres://givers:givers@localhost:5432/givers?sslmode=disable

# フロントエンド URL（CORS・リダイレクト用）
FRONTEND_URL=http://localhost:4321

# Google OAuth（Phase 2）
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# GitHub OAuth（Phase 2）
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# セッション署名用（本番では32文字以上のランダム文字列）
SESSION_SECRET=dev-secret-change-in-production-32bytes

# バックエンド URL（OAuth リダイレクト用、Docker 時は http://localhost:8080）
# BACKEND_URL=http://localhost:8080

# 認証必須フラグ（開発中は false で認証スキップ、本番は true）
AUTH_REQUIRED=false

# Stripe（v2 API — STRIPE_SECRET_KEY のみで連結アカウント作成可能）
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# 管理者メールアドレス（カンマ区切りで複数指定可能）
# HOST_EMAILS=admin@example.com,host@givers.co.jp

# 公式ドメイン（自ホスト判定用）
# OFFICIAL_DOMAIN=https://givers.example.com
