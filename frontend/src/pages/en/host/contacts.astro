---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import AdminContactList from '../../../components/react/AdminContactList';
import { t } from '../../../lib/i18n';

const locale = 'en';
---

<BaseLayout title={t(locale, 'admin.contactsTitle')} locale={locale}>
  <AdminContactList
    client:load
    locale={locale}
    title={t(locale, 'admin.contactsTitle')}
    forbiddenMessage={t(locale, 'admin.forbidden')}
    emptyLabel={t(locale, 'admin.contactsEmpty')}
    statusUnreadLabel={t(locale, 'admin.contactStatusUnread')}
    statusReadLabel={t(locale, 'admin.contactStatusRead')}
    markReadLabel={t(locale, 'admin.contactMarkRead')}
    fromLabel={t(locale, 'admin.contactFrom')}
    dateLabel={t(locale, 'admin.contactDate')}
    messageLabel={t(locale, 'admin.contactMessage')}
    filterAllLabel={t(locale, 'admin.contactFilterAll')}
    filterUnreadLabel={t(locale, 'admin.contactFilterUnread')}
    loadingLabel={t(locale, 'projects.loading')}
  />
</BaseLayout>
