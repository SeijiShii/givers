---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProjectList from '../../../components/react/ProjectList';
import { t } from '../../../lib/i18n';

const locale = 'en';
---

<BaseLayout title={t(locale, 'projects.title')} locale={locale}>
  <h1>{t(locale, 'projects.title')}</h1>
  <p>{t(locale, 'projects.description')}</p>

  <p style="margin-top: 1rem;">
    <a href="/en/projects/new" class="btn btn-accent">{t(locale, 'projects.newProject')}</a>
  </p>

  <ProjectList client:load locale={locale} />

  <p class="accent-line" style="margin-top: 2rem;">{t(locale, 'projects.phaseNote')}</p>
</BaseLayout>
