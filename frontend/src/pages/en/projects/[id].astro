---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProjectDetail from '../../../components/react/ProjectDetail';
import { t } from '../../../lib/i18n';

export const prerender = false;
const { id } = Astro.params;
const locale = 'en';
---

<BaseLayout title={id ? `Project ${id}` : 'Project'} locale={locale}>
  {id ? (
    <ProjectDetail
      client:load
      id={id}
      locale={locale}
      backLabel={t(locale, 'projects.backToList')}
      supportStatus={t(locale, 'projects.supportStatus')}
      supportStatusDetail={(args) => t(locale, 'projects.supportStatusDetail', args)}
      supportTitle={t(locale, 'projects.supportTitle')}
      phaseNoteDonate={t(locale, 'projects.phaseNoteDonate')}
      donateLabel={t(locale, 'projects.donate')}
    />
  ) : (
    <p>Invalid project</p>
  )}
</BaseLayout>
