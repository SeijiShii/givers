---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProjectForm from '../../../components/react/ProjectForm';
import { t } from '../../../lib/i18n';

const locale = 'en';
---

<BaseLayout title={t(locale, 'projects.newProject')} locale={locale}>
  <h1>{t(locale, 'projects.newProject')}</h1>
  <ProjectForm
    client:load
    locale={locale}
    redirectPath="/en/projects"
  />
</BaseLayout>
