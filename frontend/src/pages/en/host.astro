---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t } from '../../lib/i18n';

const locale = 'en';
---

<BaseLayout title={t(locale, 'host.title')} locale={locale}>
  <h1>{t(locale, 'host.title')}</h1>
  <p>{t(locale, 'host.description')}</p>

  <div class="signal-cards" style="margin-top: 2rem; display: flex; flex-wrap: wrap; gap: 1rem;">
    <div class="card signal-card signal-ok">
      <span class="signal-dot"></span>
      <h2>{t(locale, 'host.signalOk')}</h2>
      <p>{t(locale, 'host.signalOkDesc')}</p>
    </div>
    <div class="card signal-card signal-warn">
      <span class="signal-dot"></span>
      <h2>{t(locale, 'host.signalWarn')}</h2>
      <p>{t(locale, 'host.signalWarnDesc')}</p>
    </div>
    <div class="card signal-card signal-danger">
      <span class="signal-dot"></span>
      <h2>{t(locale, 'host.signalDanger')}</h2>
      <p>{t(locale, 'host.signalDangerDesc')}</p>
    </div>
  </div>

  <p class="accent-line" style="margin-top: 2rem;">{t(locale, 'host.phaseNote')}</p>
</BaseLayout>
