---
import BaseLayout from '../layouts/BaseLayout.astro';
import HealthStatus from '../components/react/HealthStatus';
import FeaturedProjects from '../components/react/FeaturedProjects';
import ActivityFeed from '../components/react/ActivityFeed';
import ShareButtons from '../components/react/ShareButtons';
import { t } from '../lib/i18n';
import { SITE_URL } from '../lib/site';

const locale = 'ja';
---

<BaseLayout title={t(locale, 'home.title')} locale={locale}>
  <div class="hero">
    <h1>{t(locale, 'home.title')}</h1>
    <p class="tagline">{t(locale, 'home.tagline')}</p>
    <p class="accent-line">{t(locale, 'home.description')}</p>
    <ShareButtons
      client:load
      url={SITE_URL}
      title={t(locale, 'home.title') + ' - ' + t(locale, 'home.tagline')}
      locale={locale}
      shareLabel={t(locale, 'share.label')}
    />
  </div>

  <ActivityFeed
    client:load
    locale={locale}
    title={t(locale, 'feed.title')}
    projectCreated={t(locale, 'feed.projectCreated')}
    projectUpdated={t(locale, 'feed.projectUpdated')}
  />

  <FeaturedProjects
    client:load
    locale={locale}
    newTitle={t(locale, 'home.newProjects')}
    hotTitle={t(locale, 'home.hotProjects')}
    viewAll={t(locale, 'home.viewAll')}
    platformBadge={t(locale, 'platformProject.badge')}
  />

  <section class="card" style="margin-top: 2rem;">
    <h2>{t(locale, 'home.apiStatus')}</h2>
    <HealthStatus client:load label={t(locale, 'home.apiStatus')} />
  </section>
</BaseLayout>
