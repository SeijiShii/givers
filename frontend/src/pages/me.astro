---
import BaseLayout from '../layouts/BaseLayout.astro';
import MePage from '../components/react/MePage';
import { t } from '../lib/i18n';

const locale = 'ja';
---

<BaseLayout title={t(locale, 'me.title')} locale={locale}>
  <h1>{t(locale, 'me.title')}</h1>
  <MePage
    client:load
    locale={locale}
    tabDonationsLabel={t(locale, 'me.tabDonations')}
    tabProjectsLabel={t(locale, 'me.tabProjects')}
    donationHistoryLabel={t(locale, 'me.donationHistory')}
    recurringDonationsLabel={t(locale, 'me.recurringDonations')}
    noDonationsLabel={t(locale, 'me.noDonations')}
    noRecurringLabel={t(locale, 'me.noRecurring')}
    cancelRecurringLabel={t(locale, 'me.cancelRecurring')}
    cancelledLabel={t(locale, 'me.cancelled')}
    editRecurringLabel={t(locale, 'me.editRecurring')}
    pauseRecurringLabel={t(locale, 'me.pauseRecurring')}
    resumeRecurringLabel={t(locale, 'me.resumeRecurring')}
    deleteRecurringLabel={t(locale, 'me.deleteRecurring')}
    pausedLabel={t(locale, 'me.paused')}
    intervalMonthlyLabel={t(locale, 'me.intervalMonthly')}
    intervalYearlyLabel={t(locale, 'me.intervalYearly')}
    intervalLabel={t(locale, 'me.intervalLabel')}
    editRecurringTitle={t(locale, 'me.editRecurringTitle')}
    deleteRecurringConfirmTitle={t(locale, 'me.deleteRecurringConfirmTitle')}
    deleteRecurringConfirmLabel={t(locale, 'me.deleteRecurringConfirm')}
    saveLabel={t(locale, 'projects.save')}
    cancelLabel={t(locale, 'projects.cancel')}
    projectNameLabel={t(locale, 'me.projectName')}
    amountLabel={t(locale, 'me.amount')}
    dateLabel={t(locale, 'me.date')}
    messageLabel={t(locale, 'me.message')}
    newProjectLabel={t(locale, 'me.newProject')}
    editProjectLabel={t(locale, 'me.editProject')}
    statusLabel={t(locale, 'me.status')}
    statusActiveLabel={t(locale, 'me.statusActive')}
    statusFrozenLabel={t(locale, 'me.statusFrozen')}
    statusDeletedLabel={t(locale, 'me.statusDeleted')}
    noProjectsLabel={t(locale, 'me.noProjects')}
    loginPromptLabel={t(locale, 'me.loginPrompt')}
    loadingLabel={t(locale, 'projects.loading')}
    tabWatchesLabel={t(locale, 'me.tabWatches')}
    watchListLabel={t(locale, 'me.watchList')}
    unwatchLabel={t(locale, 'me.unwatch')}
    noWatchesLabel={t(locale, 'me.noWatches')}
  />
</BaseLayout>
