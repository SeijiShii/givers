---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t } from '../lib/i18n';

const locale = 'ja';
---

<BaseLayout title={locale === 'ja' ? 'マイページ' : 'My Page'} locale={locale}>
  <h1>{locale === 'ja' ? 'マイページ' : 'My Page'}</h1>
  <p>{locale === 'ja' ? 'ログインすると、あなたのプロジェクトや寄付履歴が表示されます。' : 'When logged in, your projects and donation history will be displayed.'}</p>
  <p class="accent-line">{locale === 'ja' ? '（Phase 3 でプロジェクト一覧、Phase 4 で寄付履歴を実装）' : '(Projects in Phase 3, donation history in Phase 4)'}</p>
</BaseLayout>
