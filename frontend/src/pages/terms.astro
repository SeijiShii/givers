---
import BaseLayout from '../layouts/BaseLayout.astro';
import LegalPage from '../components/react/LegalPage';
import { t } from '../lib/i18n';

const locale = 'ja';
---

<BaseLayout title={t(locale, 'legal.terms')} locale={locale}>
  <h1>{t(locale, 'legal.terms')}</h1>
  <LegalPage
    client:load
    type="terms"
    notConfiguredLabel={t(locale, 'legal.notConfigured')}
    backToTopLabel={t(locale, 'legal.backToTop')}
    backToTopHref="/"
  />
</BaseLayout>
