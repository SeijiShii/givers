---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t } from '../lib/i18n';

const locale = 'ja';
---

<BaseLayout title={t(locale, 'about.title')} locale={locale}>
  <h1>{t(locale, 'about.title')}</h1>
  <div class="card" style="margin-top: 1rem;">
    <p>{t(locale, 'about.official', { url: 'https://givers.example.com' })}</p>
    <p class="accent-line">{t(locale, 'about.selfHosted')}</p>
  </div>
</BaseLayout>
