---
export const prerender = false;
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProjectFormWithLoader from '../../../components/react/ProjectFormWithLoader';
import { t } from '../../../lib/i18n';

const { id } = Astro.params;
const locale = 'ja';
---

<BaseLayout title={t(locale, 'projects.editProject')} locale={locale}>
  <h1>{t(locale, 'projects.editProject')}</h1>
  {id ? (
    <ProjectFormWithLoader
      client:load
      locale={locale}
      projectId={id}
      redirectPath={`/projects/${id}`}
    />
  ) : (
    <p style="color: var(--color-danger);">Invalid project ID</p>
  )}
</BaseLayout>
