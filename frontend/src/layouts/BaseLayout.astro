---
import '../styles/global.css';
import { t, type Locale } from '../lib/i18n';
import { SITE_URL } from '../lib/site';
import AuthStatus from '../components/react/AuthStatus';
import NavAdminLink from '../components/react/NavAdminLink';
import NavFinancialHealthMark from '../components/react/NavFinancialHealthMark';

interface Props {
  title: string;
  locale?: Locale;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogUrl?: string;
  ogType?: string;
}

const { title, locale = 'ja', ogTitle, ogDescription, ogImage, ogUrl, ogType } = Astro.props;

const basePath = locale === 'en' ? '/en' : '';

const resolvedOgTitle = ogTitle || `${title} | GIVErS`;
const resolvedOgDescription = ogDescription || t(locale, 'home.description');
const resolvedOgImage = ogImage || `${SITE_URL}/ogp-default.png`;
const resolvedOgUrl = ogUrl || `${SITE_URL}${Astro.url.pathname}`;
const resolvedOgType = ogType || 'website';
---

<!DOCTYPE html>
<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/givers-logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | GIVErS</title>
    <meta name="description" content={resolvedOgDescription} />
    <!-- Open Graph -->
    <meta property="og:title" content={resolvedOgTitle} />
    <meta property="og:description" content={resolvedOgDescription} />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:url" content={resolvedOgUrl} />
    <meta property="og:type" content={resolvedOgType} />
    <meta property="og:site_name" content="GIVErS" />
    <meta property="og:locale" content={locale === 'ja' ? 'ja_JP' : 'en_US'} />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={resolvedOgTitle} />
    <meta name="twitter:description" content={resolvedOgDescription} />
    <meta name="twitter:image" content={resolvedOgImage} />
  </head>
  <body>
    <header>
      <nav class="main-nav">
        <a href={`${basePath}/`} class="logo-link">
          <img src="/givers-logo.png" alt="GIVErS" width="32" height="32" class="logo-img" />
          {t(locale, 'nav.home')}
        </a>
        <a href={`${basePath}/host`} class="nav-health-header">
          {t(locale, 'nav.host')}
          <NavFinancialHealthMark client:load locale={locale} />
        </a>
        <span class="auth-status-header">
          <AuthStatus client:load locale={locale} />
        </span>
        <button type="button" class="nav-toggle" aria-label={locale === 'ja' ? 'メニュー' : 'Menu'} aria-expanded="false" data-nav-toggle>
          <span class="nav-toggle-bar"></span>
          <span class="nav-toggle-bar"></span>
          <span class="nav-toggle-bar"></span>
        </button>
        <div class="nav-menu" data-nav-menu>
          <a href={`${basePath}/projects`}>{t(locale, 'nav.projects')}</a>
          <a href={`${basePath}/me`}>{t(locale, 'nav.me')}</a>
          <NavAdminLink client:load locale={locale} basePath={basePath} />
          <a href={`${basePath}/about`}>{t(locale, 'nav.about')}</a>
          <a href={`${basePath}/faq`}>{t(locale, 'nav.faq')}</a>
          <a href={`${basePath}/contact`}>{t(locale, 'nav.contact')}</a>
          <span class="locale-switcher">
            {locale === 'ja' ? (
              <a href={`/en${Astro.url.pathname === '/' ? '' : Astro.url.pathname}`} aria-label="Switch to English">{t(locale, 'locale.en')}</a>
            ) : (
              <a href={Astro.url.pathname.replace(/^\/en/, '') || '/'} aria-label="日本語に切り替え">{t(locale, 'locale.ja')}</a>
            )}
          </span>
        </div>
      </nav>
    </header>
    <div class="nav-overlay" data-nav-overlay aria-hidden="true"></div>
    <script>
      (function () {
        const toggle = document.querySelector('[data-nav-toggle]');
        const menu = document.querySelector('[data-nav-menu]');
        const overlay = document.querySelector('[data-nav-overlay]');
        if (!toggle || !menu) return;
        function closeMenu() {
          menu?.classList.remove('is-open');
          toggle?.setAttribute('aria-expanded', 'false');
          overlay?.classList.remove('is-open');
          overlay?.setAttribute('aria-hidden', 'true');
        }
        function openMenu() {
          menu?.classList.add('is-open');
          toggle?.setAttribute('aria-expanded', 'true');
          overlay?.classList.add('is-open');
          overlay?.setAttribute('aria-hidden', 'false');
        }
        toggle.addEventListener('click', function () {
          if (menu?.classList.contains('is-open')) closeMenu();
          else openMenu();
        });
        overlay?.addEventListener('click', closeMenu);
        document.addEventListener('click', function (e) {
          const target = e.target as Node | null;
          if (menu?.classList.contains('is-open') && target && !menu.contains(target) && !toggle?.contains(target)) {
            closeMenu();
          }
        });
      })();
    </script>
    <main>
      <slot />
    </main>
    <footer>
      <p>{t(locale, 'footer.text')}</p>
      <nav class="footer-legal" aria-label={locale === 'ja' ? '法的文書' : 'Legal'}>
        <a href={`${basePath}/terms`}>{t(locale, 'legal.terms')}</a>
        <span aria-hidden="true"> · </span>
        <a href={`${basePath}/privacy`}>{t(locale, 'legal.privacy')}</a>
        <span aria-hidden="true"> · </span>
        <a href={`${basePath}/disclaimer`}>{t(locale, 'legal.disclaimer')}</a>
        <span aria-hidden="true"> · </span>
        <a href={`${basePath}/contact`}>{t(locale, 'nav.contact')}</a>
      </nav>
    </footer>
  </body>
</html>
